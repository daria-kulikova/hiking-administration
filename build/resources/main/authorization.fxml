<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL" prefHeight="400.0" prefWidth="600.0"
          vgap="20" xmlns="http://javafx.com/javafx/8.0.172-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.Authorization">

    <Label text="LOGIN" />

    <TextField fx:id="usrname" prefHeight="52.0" prefWidth="200.0" promptText="Username" />

    <PasswordField fx:id="pass" prefHeight="52.0" prefWidth="200.0" promptText="Password" />

    <Button onAction="#login" onKeyPressed="#login" text="LOGIN" />

</FlowPane>
